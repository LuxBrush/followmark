{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "types": ["chrome-types"]
  },
  "include": [
    "src/popup.ts",
    "src/common.ts",
    "src/build.ts",
    "src/check.ts",
    "src/definitions.d.ts"
  ]
}
