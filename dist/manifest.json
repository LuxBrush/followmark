{
  "manifest_version": 3,
  "name": "FollowMark",
  "short_name": "FollowMark",
  "version": "0.0.1",
  "description": "FollowMark: Your bookmakrs follow your progress automatically! Great for webcomics, wikis, blogs, and YouTube!",
  "author": "Lux Brush",

  "browser_specific_settings": {
    "gecko": {
      "id": "luxbrushmedia@proton.me",
      "strict_min_version": "1.0.0"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "icons": {
    "120": "icons/active.png"
  },

  "action": {
    "default_icon": {
      "120": "icons/inactive.png"
    },
    "default_popup": "popup.html",
    "default_title": "FollowMark - follows your progress automatically"
  },
  "permissions": ["tabs", "storage", "bookmarks", "scripting"],
  "host_permissions": ["<all_urls>"]
}
